{
  "name": "Countdown Timer",
  "route": "/countdowntimer",
  "alias": "ct",
  "params": {
    "hours": {
      "type": "number",
      "label": "Hours",
      "shorthand": "h",
      "value": 0,
      "min": 0,
      "required": true
    },
    "minutes": {
      "type": "number",
      "label": "Minutes",
      "shorthand": "m",
      "value": 0,
      "min": 0,
      "max": 59,
      "required": true,
      "info": "0 to 59"
    },
    "seconds": {
      "type": "number",
      "label": "Seconds",
      "shorthand": "s",
      "value": 0,
      "min": 0,
      "max": 59,
      "required": true,
      "info": "0 to 59"
    },
    "background": {
      "type": "string",
      "label": "Background color",
      "shorthand": "bg",
      "value": "#000000",
      "info": "Hex, RGB or RGBA. 'transparent' for no color"
    },
    "color": {
      "type": "string",
      "label": "Text color",
      "shorthand": "col",
      "value": "#ffffff",
      "info": "Hex, RGB or RGBA"
    },
    "width": {
      "type": "number",
      "label": "Container width",
      "shorthand": "w",
      "value": 0,
      "info": "0 = width calculated automatically"
    },
    "textAlign": {
      "type": "string",
      "label": "Text align",
      "shorthand": "ta",
      "value": "center",
      "info": "Available options: left, center, right"
    },
    "fontFamily": {
      "type": "string",
      "label": "Font family",
      "shorthand": "ff",
      "value": "Arial"
    },
    "fontSize": {
      "type": "number",
      "label": "Font size (px)",
      "shorthand": "fz",
      "value": 24,
      "min": 1
    },
    "fontWeight": {
      "type": "string",
      "label": "Font weight",
      "shorthand": "fw",
      "value": "bold"
    },
    "fontStyle": {
      "type": "string",
      "label": "Font style",
      "shorthand": "fs",
      "value": "",
      "info": "Available options: normal, italic, oblique"
    },
    "letterSpacing": {
      "type": "string",
      "label": "Letter spacing (px)",
      "shorthand": "ls",
      "value": "",
      "info": "0 = normal"
    },
    "paddingTop": {
      "type": "number",
      "label": "Top padding (px)",
      "shorthand": "pt",
      "value": 0,
      "min": 0
    },
    "paddingBottom": {
      "type": "number",
      "label": "Bottom padding (px)",
      "shorthand": "pb",
      "value": 0,
      "min": 0
    },
    "paddingLeft": {
      "type": "number",
      "label": "Left padding (px)",
      "shorthand": "pl",
      "value": 0,
      "min": 0
    },
    "paddingRight": {
      "type": "number",
      "label": "Right padding (px)",
      "shorthand": "pr",
      "value": 0,
      "min": 0
    },
    "customCSS": {
      "type": "string",
      "label": "Custom stylesheet URL",
      "shorthand": "cs",
      "value": "",
      "info": "HTTPS links only"
    }
  }
}
