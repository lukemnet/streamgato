    "background": {
      "type": "string",
      "label": "Background color",
      "shorthand": "bg",
      "value": "#000000",
      "info": "Hex, RGB or RGBA. 'transparent' for no color"
    },
    "color": {
      "type": "string",
      "label": "Text color",
      "shorthand": "col",
      "value": "#ffffff",
